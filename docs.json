{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Samuel Mail Blog",
  "version": "1.0.0",
  "colors": {
    "primary": "#1a365d",
    "light": "#2c5282",
    "dark": "#1a365d"
  },
  "favicon": "/blog-logo.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      },
      {
        "tab": "Academy",
        "groups": [
          {
            "group": "Courses",
            "pages": [
              "courses/deliverability-101",
              "courses/advanced-dmarc"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://omen-og-or.com"
  },
  "navbar": {
    "links": [
      {
        "label": "Home",
        "href": "https://omen-og-or.com/pages/home"
      },
      {
        "label": "About",
        "href": "https://omen-og-or.com/pages/about"
      },
      {
        "label": "Contact",
        "href": "https://omen-og-or.com/pages/contact"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://omen-og-or.com/pages/dashboard"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/Realsam0101",
      "github": "https://github.com/omenogor01/documentation/tree/main",
      "linkedin": "https://www.linkedin.com/in/samuel-omenogor-a8514125a/"
    },
    "quickLinks": [
      {
        "label": "About",
        "href": "https://omen-og-or.com/about"
      },
      {
        "label": "Privacy Policy",
        "href": "https://omen-og-or.com/privacy-policy"
      },
      {
        "label": "Contact",
        "href": "https://omen-og-or.com/contact"
      },
      {
        "label": "Sitemap",
        "href": "https://omen-og-or.com/sitemap"
      }
    ],
    "legal": {
      "termsOfService": "/terms-of-service",
      "privacyPolicy": "/privacy-policy"
    }
  },
  "homepage": {
    "featured": [
      "blog/email-basics/how-email-works",
      "blog/dns-guides/spf-records",
      "blog/advanced/email-authentication"
    ],
    "recentPosts": true,
    "trending": [
      "blog/advanced/bulk-email-best-practices",
      "blog/dns-guides/dkim-setup"
    ],
    "cta": {
      "text": "Subscribe to our newsletter for the latest updates!",
      "button": {
        "label": "Subscribe",
        "href": "/subscribe"
      }
    }
  },
  "seo": {
    "title": "Mint Starter Kit",
    "description": "Learn everything about email fundamentals, DNS, and advanced email topics.",
    "keywords": ["email", "DNS", "deliverability", "blog"],
    "openGraph": {
      "type": "website",
      "url": "https://omen-og-or.com",
      "image": "/blog-logo.png"
    }
  },
  "analytics": {
    "providers": [
      {
        "name": "GoogleAnalytics",
        "trackingId": "UA-12345678-1"
      },
      {
        "name": "Plausible",
        "trackingId": "plausible-site-id"
      }
    ]
  },
  "accessibility": {
    "darkMode": true,
    "altText": true
  },
  "localization": {
    "defaultLanguage": "en",
    "supportedLanguages": ["en", "es", "fr", "de"]
  },
  "performance": {
    "lazyLoadImages": true,
    "cacheDuration": "1h"
  }
}